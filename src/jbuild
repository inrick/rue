(jbuild_version 1)

(executables
  ((names (main test))
   (flags (:standard -short-paths -safe-string))
   (libraries ())
   (preprocess (pps (ppx_deriving.show)))))

(ocamllex (lexer))
(menhir ((modules (parser))))

(alias
  ((name runtest)
   (action (setenv OCAMLRUNPARAM b (run ${exe:test.exe})))))
